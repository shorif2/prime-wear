---
import Ads from "../components/HomeComponents/Ads.astro";
import Banner from "../components/HomeComponents/Banner.astro";
import Categories from "../components/HomeComponents/Categories.astro";
import Features from "../components/HomeComponents/Features.astro";
import Newarrival from "../components/HomeComponents/Newarrival.astro";
import Product from "../components/HomeComponents/Product.astro";
import Layout from "../layouts/Layout.astro";
import "../styles/global.css";
import { getHeroSliders } from "../lib/apiRequest/settings";
const heroSliderData = await getHeroSliders();
---

<Layout
  title="Prime Wear - Collection of Primium Cloth"
  description="This is a clothing brand ecommerce store"
>
  <Banner heroSliderData={heroSliderData} />
  <Features />
  <Categories />
  <Newarrival />
  <Ads />
  <Product />
</Layout>
