---
import Layout from "@/layouts/Layout.astro";
import { Image } from "astro:assets";
import type {
  SearchResults,
  Product,
  Category,
  Page as CmsPage,
} from "@/lib/interface";
import { search } from "@/lib/apiRequest/search";

const query = Astro.url.searchParams.get("q") || "";
const minPriceParam = Astro.url.searchParams.get("minPrice");
const maxPriceParam = Astro.url.searchParams.get("maxPrice");
const minPrice =
  minPriceParam && minPriceParam !== "" ? parseFloat(minPriceParam) : undefined;
const maxPrice =
  maxPriceParam && maxPriceParam !== "" ? parseFloat(maxPriceParam) : undefined;

let results: SearchResults | null = null;
let error = null;

if (query) {
  try {
    const searchOptions: any = { limit: 100 };
    if (minPrice !== undefined) searchOptions.minPrice = minPrice;
    if (maxPrice !== undefined) searchOptions.maxPrice = maxPrice;
    results = await search(query, searchOptions);
    if (!results) {
      error = "Failed to fetch search results. Please try again.";
    }
  } catch (e) {
    console.error("Search error:", e);
    error = "An error occurred while searching. Please try again.";
  }
}

if (!results) {
  results = {
    products: [],
    categories: [],
    pages: [],
    success: false,
    query: query,
    timestamp: new Date().toISOString(),
  };
}

const totalResults =
  results.products.length + results.categories.length + results.pages.length;
const metaTitle = query ? `Search results for "${query}"` : `Search`;
const metaDescription = query
  ? `Browse ${totalResults} results for "${query}".`
  : "Search our products, categories, and pages.";

console.log(results);
---

<Layout title={metaTitle} description={metaDescription}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8 md:py-12">
    <div class="mb-6">
      <h1 class="text-3xl font-bold text-gray-900 mb-2">
        {
          query ? (
            <>
              Search results for{" "}
              <span class="text-black italic">"{query}"</span>
            </>
          ) : (
            "Search our store"
          )
        }
      </h1>
      {
        query && (
          <p class="text-lg text-gray-600">
            {totalResults === 0
              ? "No results found"
              : `Found ${totalResults} result${totalResults === 1 ? "" : "s"}`}
          </p>
        )
      }
    </div>

    <div class="bg-white p-6 rounded-xl shadow-sm border border-gray-200 mb-8">
      <form action="/search" method="get" class="space-y-5">
        <div class="flex flex-col md:flex-row gap-4 md:gap-6">
          <div class="flex-1">
            <label
              for="q"
              class="block text-xs font-semibold text-gray-700 mb-1.5"
              >Keywords</label
            >
            <div class="relative">
              <div
                class="absolute inset-y-0 left-0 pl-3.5 flex items-center pointer-events-none"
              >
                <svg
                  class="h-5 w-5 text-gray-400"
                  xmlns="http://www.w3.org/2000/svg"
                  viewBox="0 0 20 20"
                  fill="currentColor"
                  ><path
                    fill-rule="evenodd"
                    d="M8 4a4 4 0 100 8 4 4 0 000-8zM2 8a6 6 0 1110.89 3.476l4.817 4.817a1 1 0 01-1.414 1.414l-4.816-4.816A6 6 0 012 8z"
                    clip-rule="evenodd"></path></svg
                >
              </div>
              <input
                type="text"
                name="q"
                id="q"
                class="block w-full py-2 px-3.5 pl-10 rounded-lg border border-gray-300 shadow-sm"
                placeholder="Search for anything..."
                value={query}
              />
            </div>
          </div>
          <div class="w-full md:w-48">
            <label
              for="minPrice"
              class="block text-xs font-semibold text-gray-700 mb-1.5"
              >Min Price</label
            >
            <div class="relative">
              <div
                class="absolute inset-y-0 left-0 pl-3.5 flex items-center pointer-events-none"
              >
                <span class="text-gray-500 sm:text-sm">৳</span>
              </div><input
                type="number"
                name="minPrice"
                id="minPrice"
                class="block w-full py-2 px-3.5 pl-8 rounded-lg border border-gray-300 shadow-sm"
                placeholder="0"
                min="0"
                value={minPrice ?? ""}
              />
            </div>
          </div>
          <div class="w-full md:w-48">
            <label
              for="maxPrice"
              class="block text-xs font-semibold text-gray-700 mb-1.5"
              >Max Price</label
            >
            <div class="relative">
              <div
                class="absolute inset-y-0 left-0 pl-3.5 flex items-center pointer-events-none"
              >
                <span class="text-gray-500 sm:text-sm">৳</span>
              </div><input
                type="number"
                name="maxPrice"
                id="maxPrice"
                class="block w-full py-2 px-3.5 pl-8 rounded-lg border border-gray-300 shadow-sm"
                placeholder="Any"
                min="0"
                value={maxPrice ?? ""}
              />
            </div>
          </div>
        </div>
        <div
          class="flex justify-between items-center pt-3 mt-2 border-t border-gray-100"
        >
          <a
            href="/search"
            class="text-sm text-gray-600 hover:text-black flex items-center transition-colors"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-4 w-4 mr-1.5"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
              ><path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"
              ></path></svg
            >
            Clear filters
          </a>
          <button
            type="submit"
            class="inline-flex justify-center items-center px-5 py-2.5 border border-transparent text-xs font-semibold rounded-lg shadow-sm text-white bg-black hover:bg-gray-800"
            >Search</button
          >
        </div>
      </form>
    </div>

    {
      error && (
        <div class="bg-red-50 border-l-4 border-red-400 p-5 mb-8">
          <>
            <h3 class="font-medium text-red-800">Error</h3>
            <p class="mt-1 text-sm text-red-700">{error}</p>
          </>
        </div>
      )
    }
    {
      query && totalResults === 0 && !error && (
        <div class="bg-white border border-gray-200 rounded-xl shadow-sm p-8 text-center max-w-2xl mx-auto">
          <svg
            class="mx-auto h-16 w-16 text-gray-400"
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="1.5"
              d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"
            />
          </svg>
          <h3 class="mt-4 text-xl font-medium text-gray-900">
            No results found for "{query}"
          </h3>
          <p class="mt-2 text-base text-gray-500 max-w-md mx-auto">
            Try checking for typos or using more general terms.
          </p>
          <div class="mt-6">
            <a
              href="/"
              class="inline-flex items-center px-4 py-2 border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-black hover:bg-gray-800"
            >
              Back to home
            </a>
          </div>
        </div>
      )
    }

    {
      totalResults > 0 && !error && (
        <div class="space-y-12">
          {results.products.length > 0 && (
            <div>
              <div class="flex justify-between items-end mb-6">
                <h2 class="text-2xl font-bold text-gray-900">Products</h2>
                <p class="text-gray-500 text-sm">
                  {results.products.length} product
                  {results.products.length !== 1 ? "s" : ""}
                </p>
              </div>
              <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-5 gap-x-6 gap-y-8">
                {results.products.map((product: Product) => (
                  <a
                    href={`/products/${product.slug}`}
                    class="group bg-white rounded-xl border border-gray-200 overflow-hidden hover:shadow-md transition-all flex flex-col"
                  >
                    <div class="aspect-w-1 aspect-h-1 bg-gray-100 w-full overflow-hidden">
                      <Image
                        src={product.imageUrl || "/placeholder.jpg"}
                        alt={product.name}
                        width={300}
                        height={300}
                        class="w-full h-full object-center object-cover group-hover:scale-105 transition-transform"
                      />
                    </div>
                    <div class="p-4 flex-1 flex flex-col">
                      {product.category?.name && (
                        <div class="text-xs text-gray-500 mb-1 uppercase tracking-wide">
                          {product.category.name}
                        </div>
                      )}
                      <h3 class="text-sm  font-medium text-gray-900 mb-2 line-clamp-2 flex-grow">
                        {product.name}
                      </h3>
                      <div class="mt-auto">
                        <p class="text-base font-semibold text-black">
                          ৳{product.price.toLocaleString()}
                        </p>
                      </div>
                    </div>
                  </a>
                ))}
              </div>
            </div>
          )}

          {results.categories.length > 0 && (
            <div>
              <div class="flex justify-between items-end mb-6">
                <h2 class="text-2xl font-bold text-gray-900">Categories</h2>
                <p class="text-gray-500 text-sm">
                  {results.categories.length} categor
                  {results.categories.length !== 1 ? "ies" : "y"}
                </p>
              </div>
              <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-6">
                {results.categories.map((category: Category) => (
                  <a
                    href={`/categories/${category.slug}`}
                    class="flex items-center p-5 bg-white rounded-xl border border-gray-200 hover:shadow-md hover:border-gray-300 transition-all"
                  >
                    <div class="flex-shrink-0 mr-4">
                      <div class="w-14 h-14 bg-gradient-to-br from-gray-900 to-black rounded-lg flex items-center justify-center shadow-md">
                        <svg
                          class="w-7 h-7 text-white"
                          xmlns="http://www.w3.org/2000/svg"
                          fill="none"
                          viewBox="0 0 24 24"
                          stroke="currentColor"
                        >
                          <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="1.5"
                            d="M5 19a2 2 0 01-2-2V7a2 2 0 012-2h4l2 2h4a2 2 0 012 2v1M5 19h14a2 2 0 002-2v-5a2 2 0 00-2-2H9a2 2 0 00-2 2v5a2 2 0 01-2 2z"
                          />
                        </svg>
                      </div>
                    </div>
                    <div class="flex-1">
                      <h3 class="text-sm font-medium text-gray-900 mb-1">
                        {category.name}
                      </h3>
                      {category.description && (
                        <p class="text-sm text-gray-500 line-clamp-2">
                          {category.description}
                        </p>
                      )}
                    </div>
                  </a>
                ))}
              </div>
            </div>
          )}

          {results.pages.length > 0 && (
            <div>
              <div class="flex justify-between items-end mb-6">
                <h2 class="text-2xl font-bold text-gray-900">Pages</h2>
                <p class="text-gray-500 text-sm">
                  {results.pages.length} page
                  {results.pages.length !== 1 ? "s" : ""}
                </p>
              </div>
              <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
                {results.pages.map((page: CmsPage) => (
                  <a
                    href={`/${page.slug}`}
                    class="block p-6 bg-white rounded-xl border border-gray-200 hover:shadow-md hover:border-gray-300 transition-all"
                  >
                    <div class="flex items-center mb-3">
                      <div class="w-10 h-10 bg-gradient-to-br from-gray-100 to-gray-200 rounded-md flex items-center justify-center shadow-sm mr-3">
                        <svg
                          class="w-5 h-5 text-gray-600"
                          xmlns="http://www.w3.org/2000/svg"
                          fill="none"
                          viewBox="0 0 24 24"
                          stroke="currentColor"
                        >
                          <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="1.5"
                            d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"
                          />
                        </svg>
                      </div>
                      <h3 class="text-lg font-medium text-gray-900">
                        {page.title}
                      </h3>
                    </div>
                    <p class="text-sm text-gray-600 line-clamp-3 mb-3">
                      {page.content.replace(/<[^>]*>/g, "").substring(0, 150)}
                      {page.content.length > 150 ? "..." : ""}
                    </p>
                    <div class="text-sm font-medium text-black hover:underline inline-flex items-center">
                      Read more
                      <svg
                        class="w-4 h-4 ml-1"
                        xmlns="http://www.w3.org/2000/svg"
                        fill="none"
                        viewBox="0 0 24 24"
                        stroke="currentColor"
                      >
                        <path
                          stroke-linecap="round"
                          stroke-linejoin="round"
                          stroke-width="2"
                          d="M14 5l7 7m0 0l-7 7m7-7H3"
                        />
                      </svg>
                    </div>
                  </a>
                ))}
              </div>
            </div>
          )}
        </div>
      )
    }
  </div>
</Layout>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  .aspect-w-1 {
    position: relative;
    padding-bottom: 100%;
  }
  .aspect-w-1 > * {
    position: absolute;
    height: 100%;
    width: 100%;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
  }
</style>
